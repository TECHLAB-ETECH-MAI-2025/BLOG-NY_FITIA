{# templates/article/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">All Article</h1>

        <table class="table table-striped table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.id }}</td>
                        <td>{{ article.title }}</td>
                        <td>{{ article.description }}</td>
                        <td>
                            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                        <td>
                            {{ include('article/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucun article pour le moment.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="text-center mb-4">
            <a href="{{ path('home') }}" class="btn btn-primary mb-3">Back</a>
        </div>
    </div>
{% endblock %}
